[user]
  name = Serg Tatarnikov (sergtat)
  email = sergeytat@gmail.com
[core]
  autocrlf = input
  safecrlf = true
  eol = lf
  editor = nvim
  ;excludesfile = ~/.config/git/ignore
  quotepath = false
  whitespace = indent-with-non-tab,trailing-space,cr-at-eol
[apply]
  whitespace = fix
[status]
  showUntrackedFiles = all
[merge]
  tool = nvim -d
[diff]
  renamelimit = 0
  wordRegex = [^[:space:]]
[commit]
  template = ~/.config/git/message
  ;gpgsign = 1
[push]
  default = current
  ;default = tracking
[color]
  ui = auto
  interactive = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red reverse
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[alias]
  aa = add .
  st = status -sb
  ci = commit -S
  br = branch
  co = checkout
  df = diff
  dw = diff --word-diff --color-words
  lg = log --oneline --decorate
  lc = log -p -n1
  lol = log --pretty = oneline --abbrev-commit --graph --decorate
  ll = log --show-signature
  hist = log --pretty = format:\"%h %ad | %s%d [%an]\" --graph --date = short
  type = cat-file -t
  dump = cat-file -p
  ff = merge --ff-only
  sh = !git-sh
  poo = push
[credential]
  helper = cache --timeout = 3600
[url "git@github.com:"]
  insteadOf = "gh:"
  pushInsteadOf = "github:"
  pushInsteadOf = "git://github.com/"
[url "git://github.com/"]
  insteadOf = "github:"
[help]
  autocorrect = 1
[init]
	templatedir = ~/.config/git/templates
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
